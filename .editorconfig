root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,json,css,scss,html,yaml,yml,md}]
indent_size = 2

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
